<UserControl x:Class="Chess.View.RowsAndColumns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chess.View"
             xmlns:vm="clr-namespace:Chess.ViewModel"
            
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:RowsAndColumnsViewModel/>
    </UserControl.DataContext>

    <Grid >
        <ListView x:Name="Pieces" ItemsSource="{Binding Board.Squares}" Background="Transparent">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="700" Height="700" ItemHeight="87.5" ItemWidth="87.5" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
        <Button x:Name="UpControl" Grid.Row="0" Grid.Column="0" Content="Up" Command="{Binding UpMover}"/>
        <Button x:Name="DownControl" Grid.Row="0" Grid.Column="1" Content="Down" Command="{Binding DownMover}" />
        <Button x:Name="LeftControl" Grid.Row="1" Grid.Column="0" Content="Left" Command="{Binding LeftMover}" />
        <Button x:Name="RightControl" Grid.Row="1" Grid.Column="1" Content="Right" Command="{Binding RightMover}" />
        <Image Grid.Row="{Binding TestingRow}" Grid.Column="{Binding TestingColumn}" Margin="20,20,20,20" Source="/Pictures/chess_piece_white_bishop.jpg" Stretch="Fill" />


</UserControl>
